doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Elegant Minimalistic Dark Mode Register
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap"
      rel="stylesheet"
    )
    link(rel="stylesheet" href="/css/registerView.css")
  body
    .register-container
      h2 Register
      if error
        p.error-message #{error}
      form(action="/register" method="POST")
        .form-group
          label(for="name") Name
          input#fullName(type="text" name="name" placeholder="Your Name" required minlength="3" value=name)
        .form-group
          label(for="email") Email Address
          input#email(type="email" name="email" placeholder="your.email@example.com" required value=email)
        .form-group
          label(for="password") Password
          input#password(type="password" name="password" placeholder="••••••••" required minlength="8")
        .form-group
          label(for="confirmPassword") Confirm Password
          input#confirmPassword(type="password" name="confirmPassword" placeholder="••••••••" required minlength="8")
        button(type="submit") Register
      p.text-center
        | Already have an account?
        a(href="/login") Login

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Elegant Minimalistic Dark Mode Register
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap"
            rel="stylesheet"
        )
        link(rel="stylesheet" href="/css/registerView.css")
        script(src="../scripts/registerView.js" defer)
    body
        .register-container
            h2 Register
            p.error-message.hidden /* Form-level error message */
            form(action="/register" method="POST" novalidate)
                .form-group
                    label(for="name") Name
                    input#name(type="text" name="name" placeholder="Your Name")
                    p.error-message.hidden#name-error Name must be at least 3 characters.
                .form-group
                    label(for="email") Email Address
                    input#email(type="email" name="email" placeholder="your.email@example.com")
                    p.error-message.hidden#email-error Please enter a valid email address.
                .form-group
                    label(for="password") Password
                    input#password(type="password" name="password" placeholder="••••••••")
                    p.error-message.hidden#password-error Password must be at least 8 characters.
                .form-group
                    label(for="confirmPassword") Confirm Password
                    input#confirmPassword(type="password" name="confirmPassword" placeholder="••••••••")
                    p.error-message.hidden#confirmPassword-error Passwords do not match.
                button(type="submit" disabled) Register
            p.text-center
                | Already have an account?
                a(href="/login") Login
